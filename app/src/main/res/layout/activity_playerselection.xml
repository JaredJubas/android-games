<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group0681phase2.gamecenter.PlayerSelectionActivity">

    <TextView
        android:id="@+id/GameText"
        android:layout_width="263dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Choose the player you want to play as"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/Player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_alignEnd="@+id/GameText"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="80dp"
        android:gravity="center"
        android:text="Player 2" />

    <Button
        android:id="@+id/Player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_alignParentStart="true"
        android:gravity="center"

        android:layout_marginStart="152dp"
        android:layout_marginTop="169dp"
        android:text="Player 1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="113dp"
        android:layout_height="158dp"
        android:layout_below="@+id/GameText"


        android:layout_alignParentEnd="true"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="160dp"
        android:gravity="center"
        app:srcCompat="@drawable/tile_o" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="113dp"
        android:layout_height="158dp"
        android:layout_below="@+id/GameText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="160dp"
        android:gravity="center"
        app:srcCompat="@drawable/tile_x" />


</RelativeLayout>